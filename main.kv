#:import utils kivy.utils
# .kv file implementation of the code
  
<textinp>:
    title: 'InputDialog'
    auto_dismiss: False    
    id: test1
  
    # Using relative layout to arrange properly
    RelativeLayout:
        orientation: 'vertical'
        pos: self.pos
        size: root.size
        id: test2


        Label:
            id: title
            size: 1.5,0.5
            font_size: 70
            markup: True
            bold : True     
            pos_hint: {'center_x': 0.5, 'center_y': 0.90}
            text: 'MacroTracker'
            background_color:(0,0,1,1)
            canvas.before:
                Color:
                    rgba:self.background_color
            color:(0,0.3,1,1) 
            outline_color:(1,1,1,1)
            outline_width:2

             
        TextInput:
            id: input1
            input_filter: 'float'
            hint_text:'Enter Protein'
            pos_hint: {'center_x': 0.24, 'center_y': 0.205}
            size_hint: 0.30, 0.1
            on_text: app.process()

        TextInput:
            id: input2    
            input_filter: 'float'
            hint_text:'Enter Carbs'
            pos_hint: {'center_x': 0.24, 'center_y': 0.405}
            size_hint: 0.30, 0.1
            on_text: app.process()

        TextInput:
            id: input3
            input_filter: 'float'    
            hint_text:'Enter Fats'
            pos_hint: {'center_x': 0.24, 'center_y': 0.605}
            size_hint: 0.30, 0.1
            on_text: app.process()

        TextInput:
            id: input4
            input_filter: 'float'    
            hint_text:'Enter Kcals'
            pos_hint: {'center_x': 0.24, 'center_y': 0.800}
            size_hint: 0.30, 0.1
            on_text: app.process()



        FloatLayout:     

            Button:
                id: plusbutton
                text:"ADD"
                markup: True
                bold : True
                background_color: 1, 10, 100, 0.7
                size_hint: 0.25, 0.1
                pos_hint: {"x":0.645, "top":0.15}
                on_release : app.add_data(), app.clear_text_boxes()


            Button:
                id: subbutton
                text:"SUB"
                markup: True
                bold : True
                background_color: 1, 9, 100, 0.4          
                size_hint: 0.25, 0.1
                pos_hint: {"x":0.365, "top":0.15}
                on_release : app.remove_last_data(), app.clear_text_boxes()                

            Button:
                id: Kcalstotalsbutton
                text:"="
                markup: True
                bold : True                
                background_color: 00, 10, 40, 0.5
                size_hint: 0.1, 0.1
                pos_hint: {"x":0.79, "top":0.85}
                on_release : app.totalsbuttonKcal(), app.clear_text_boxes()              

            Button:
                id: clearbutton
                text:"CLEAR"
                markup: True
                bold : True
                background_color: 0, 0, 100, 0.5
                size_hint: 0.25, 0.1
                pos_hint: {"x":0.085, "top":0.15}
                on_release : app.clear_data(), app.clear_text_boxes()

            Button:
                id: TOTcbButton
                text:"="
                markup: True
                bold : True                
                background_color: 00, 10, 40, 0.5
                size_hint: 0.1, 0.1
                pos_hint: {"x":0.79, "top":0.45}
                on_release : app.TOTcbButton(), app.clear_text_boxes()                 

            Button:
                id: TOTfButton
                text:"="
                markup: True
                bold : True                
                background_color: 00, 10, 40, 0.5
                size_hint: 0.1, 0.1
                pos_hint: {"x":0.79, "top":0.65}
                on_release : app.TOTfButton(), app.clear_text_boxes()                  

            Button:
                id: TOTpButton
                text:"="
                markup: True
                bold : True                
                background_color: 00, 10, 40, 0.5
                size_hint: 0.1, 0.1
                pos_hint: {"x":0.79, "top":0.25}
                on_release :app.TOTpButton(), app.clear_text_boxes()                   


            Label:
                id: outputKcals    
                size: 0.5,0.5
                markup: True
                bold : True
                pos_hint: {"x":0.1, "y":0.31}  # pos different from button layout
                text: 'TOT Kcals'
                background_color: 50,50,50,50

            Label:
                id: TOTcbButton   
                size: 0.5,0.5
                markup: True
                bold : True
                pos_hint: {"x":0.1, "y":-0.1}  # pos different from button layout
                text: 'TOT Carbs'
                background_color: 50,50,50,50                

            Label:
                id: TOTfButton 
                size: 0.5,0.5
                markup: True
                bold : True                
                pos_hint: {"x":0.1, "y":0.1}  # pos different from button layout
                text: 'TOT Fats'
                background_color: 50,50,50,50  

            Label:
                id: TOTpButton 
                size: 0.5,0.5
                markup: True
                bold : True                
                pos_hint: {"x":0.1, "y":-0.3}  # pos different from button layout
                text: 'TOT Protein'
                background_color: 50,50,50,50  